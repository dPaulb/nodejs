<%include ../header.ejs%>
<div class="row">
    <%
    if(category.content){
        var foo = category.content.split('<img');
    for(var i=1;i<foo.length;i++)
    {


    %>
    <div name="photos" id="colmd3" class="col-xs-3">
        <a href="/photoView/<%=foo[i].split('src=')[1].split('"')[1].split('/uploads')[1].split('/')[1]%>"><img src="<%=foo[i].split('src=')[1].split('"')[1]%>" style="object-fit: cover;"></a>


        <!-- image_view_Modal -->
        <div class="modal fade" id="myModal<%=i%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header" style="background-color: #F0F0F0">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close" ><span aria-hidden="true" >&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel"><%=category.title%></h4>
                    </div>
                    <div class="modal-body">
                        <a href="#"><img style="border-radius: 10px;width:100%;height : 100%;object-fit : cover;" src="<%=foo[i].split('src=')[1].split('"')[1]%>"></a>


                    </div>
                    <div class="modal-footer" style="background-color: #F0F0F0">


                    </div>
                </div>
            </div>
        </div>
    </div>
    <%}
    if(foo.length >= 9){
    %>

    <!--<div class="col-xs-12">-->
    <!--<button type="button" id="more" class="btn btn-default btn-block">더보기</button>-->
    <!--</div>-->

    <%}}%>

</div>


<script>
    document.addEventListener('contextmenu', event => event.preventDefault());
</script>
<a href="/admin/edit/<%=category.id%>" class="btn pull-right" style="color : black;">
    <span class="glyphicon glyphicon-edit" style="font-size : 30px;"></span>
</a>

<%include ../footer.ejs%>

